<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8sp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="4sp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="8sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorAccent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ID NOTA"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:id="@+id/sTransaksiIdNota"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/red"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_note"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1sp"
                            android:layout_height="290sp"
                            android:background="@color/black"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksi"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksijatuhTempo"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiNamaOutlet"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiNamaSales"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiNominalPembayaran"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiJumlahPembayaran"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiHutangPembayaran"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiAksiTransaksi"
                                android:textColor="#FFF"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"
                                android:background="@color/red"
                                android:paddingLeft="4sp"
                                android:textSize="20sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiIndexTransaksi"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiNamaRoti"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiJumlahRoti"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sTransaksiHargaRoti"
                                android:textColor="#000"
                                android:text="tgl transaksi"
                                android:layout_marginTop="2dp"/>
                            
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>